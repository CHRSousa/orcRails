<div id="filterrific_results">

  <div>
    <%= page_entries_info tipo_servicos %>
  </div>

<table border="1">
  <thead>
    <tr>
      <th align="left">Codigo</th>
      <th align="left">Item</th>
      <th align="left">Descricao</th>
      <th align="left">Pai</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_servicos.each do |tipo_servico| %>
      <tr>
        <% if tipo_servico.father != nil %>
          <td><%= tipo_servico.id %></td>
          <td><%= tipo_servico.item %></td>
          <td><%= tipo_servico.descricao %></td>
          <td><%= tipo_servico.father.descricao %></td>
        <%else%>    
          <td><b><%= tipo_servico.id %></b></td>
          <td><b><%= tipo_servico.item %></b></td>
          <td><b><%= tipo_servico.descricao %></b></td>
          <td></td>
        <%end%>    
        
        <td><%= link_to 'Ver', tipo_servico %></td>
        <td><%= link_to 'Atualizar', edit_tipo_servico_path(tipo_servico) %></td>
        <td><%= link_to 'Apagar', tipo_servico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
</table>

</div>

<%= paginate @tipo_servicos %>