<p id="notice"><%= notice %></p>

<h1>Tipo Servicos</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Item</th>
      <th>Descricao</th>
      <th>Pai</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_servicos.each do |tipo_servico| %>
      <tr>
        <td><%= tipo_servico.id %></td>
        <td><%= tipo_servico.item %></td>
        <td><%= tipo_servico.descricao %></td>
        <td>
          <% if tipo_servico.father != nil %>
            <%= tipo_servico.father.descricao %>
          <%end%>    
        </td>
        <td><%= link_to 'Show', tipo_servico %></td>
        <td><%= link_to 'Edit', edit_tipo_servico_path(tipo_servico) %></td>
        <td><%= link_to 'Destroy', tipo_servico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

