<div id="filterrific_results">

  <div>
    <%= page_entries_info orcamentos %>
  </div>

  <table border="1">
    <tr>
      <th align="left">Obra</th>
      <th align="left">Nome Proprietário</th>
      <th align="left">CPF Proprietário</th>
      <th align="left">BDI</th>
      <th align="left">Data</th>
      <th colspan="3"></th>
    </tr>
    <% @orcamentos.each do |orcamento| %>
      <tr>
        <td><%= orcamento.obra.descricao %></td>
        <td><%= orcamento.nome_proprietario %></td>
        <td><%= orcamento.nome_proprietario %></td>
        <td><%= orcamento.bdi %></td>
        <td><%= orcamento.data %></td>
        <td><%= link_to 'Ver', orcamento %></td>
        <td><%= link_to 'Alterar', edit_orcamento_path(orcamento) %></td>
        <td><%= link_to 'Apagar', orcamento, method: :delete, data: { confirm: 'Tem certeza que quer apagar esse orçamento?' } %></td>
      </tr>
    <% end %>
  </table>

</div>

<%= paginate @orcamentos %>