<h1>Insumos <%= link_to '+', new_insumo_path %></h1>

<br>
<table border="1"><tr><td>

<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
  <div>
    Pesquisa
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed'
    ) %>
  </div>
  <div>
    Tipo
    <%= f.select(
      :with_tipo,
      @filterrific.select_options[:with_tipo],
      { include_blank: '- Todos -' }
    ) %>
  </div>

  <div>
    Unidade
    <%= f.select(
      :with_unidade_id, 
      @filterrific.select_options[:with_unidade_id], 
      { include_blank: '- Todos -'})
    %>
  </div>
  <div>
    Ordenado por
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
  </div>
  <div>
    <%= link_to(
      'Limpar Filtros',
      reset_filterrific_url,
    ) %> &nbsp; <%= f.submit 'Filtrar' %>
  </div>
  
<% end %>
</td></tr></table>
<br><br>

<%= render(
  partial: 'insumos/list',
  locals: { insumos: @insumos }
) %>



<br>


