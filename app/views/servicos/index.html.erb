<p id="notice"><%= notice %></p>

<h1>Servicos</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Descricao</th>
      <th>Codigo seinfra</th>
      <th>Unidade</th>
      <th>Tipo servico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicos.each do |servico| %>
      <tr>
        <td><%= servico.item %></td>
        <td><%= servico.descricao %></td>
        <td><%= servico.codigo_seinfra %></td>
        <td><%= servico.unidade.sigla %></td>
        <td><%= servico.tipo_servico.descricao %></td>
        <td><%= link_to 'Show', servico %></td>
        <td><%= link_to 'Edit', edit_servico_path(servico) %></td>
        <td><%= link_to 'Destroy', servico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

